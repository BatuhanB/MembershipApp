@model List<AssignRoleViewModel>;
@{
    ViewData["Title"] = "AssignRole";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-4">
            <h1 class="text-center">Assign Role To @ViewBag.userName</h1>
            <form asp-action="AssignRole" method="post" asp-route-userId="@ViewBag.userId">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model[i].Exists">
                        <label class="form-check-label" for="flexCheckDefault">
                            @Model[i].Name
                        </label>
                        <input type="hidden" asp-for="@Model[i].RoleId">
                        <input type="hidden" asp-for="@Model[i].Name">
                    </div>
                }
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>