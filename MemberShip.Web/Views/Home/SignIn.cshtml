@model SignInViewModel;
@{
    ViewData["Title"] = "SignIn";
}

<div class="container">
    <div class="row" style="margin-top:40px;">
        <div class="col-md-4 offset-md-4">
            <h2 style="display:flex;justify-content:center;"> User Login</h2>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form method="post" asp-controller="Home" asp-action="SignIn">
                <div class="row mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" aria-describedby="email" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="row mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" asp-for="Password">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" asp-for="RememberMe">
                    <label class="form-check-label" for="rememberMe">Check me out</label>
                </div>
                <div class="row mb-3">
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
